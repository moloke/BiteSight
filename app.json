{
  "expo": {
    "name": "BiteSight",
    "slug": "bitesight",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "scheme": "bitesight",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.bitesight.app",
      "infoPlist": {
        "NSCameraUsageDescription": "BiteSight needs camera access to scan menu items and recognize text.",
        "NSPhotoLibraryUsageDescription": "BiteSight needs photo library access to select menu images for scanning."
      }
    },
    "android": {
      "package": "com.bitesight.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ],
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow BiteSight to access your camera to scan menus."
        }
      ]
    ]
  }
}